/*导航栏*/

.channel-bar-wrapper {
  position: fixed;
  z-index: 10;
  background-color: #dbdbdb;
  width: 100%;
  top: 0;
  left: 0;
}

.channel-bar-scroller {
  width: 750rpx;
  display: flex;
}

.channel-wrapper {
  display: flex;
  flex-direction: row;
  flex-shrink: 0;
  height: 70rpx;
  margin: 5rpx 20rpx;
  align-items: center;
  text-align: center;
}

.channel-title {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}

/*轮播图*/

.lateast-news-wrapper {
  margin-top: 80rpx;
  float: center;
  text-align: center;
  width: 100%;
  background-color: rgba(219, 219, 219, 0.2);
}

swiper {
  height: 350rpx;
  width: 100%;
}

swiper-item {
  position: absolute;
  width: 100%;
  height: 100%;
}

.focused-news-swiper-wapper {
  height: 350rpx;
  position: relative;
}

.focused-news-image {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}

.focused-news-title {
  position: absolute;
  left: 0;
  right: 0;
  top: 248rpx;
  height: 149rpx;
  background-color: rgba(240, 233, 233, 0.822);
  text-align: left;
  padding: 0 20rpx;
}

/*新闻列表*/

.news-list-wrapper {
  background-color: rgba(219, 219, 219, 0.2);
  padding-top: 10rpx;
}

.news-list {
  height: 200rpx;
  width: 725rpx;
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  padding-right: 5rpx;
  margin: 5rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.news-list-content {
  width: 550rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  vertical-align: center;
  justify-content: center;
}

.news-list-title {
  font-size: 35rpx;
}

.news-list-source, .news-list-date {
  font-size: 25rpx;
}

.news-list-img {
  width: 200rpx;
  height: 190rpx;
}
